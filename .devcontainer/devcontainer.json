// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.245.2/containers/dotnet
{
	"name": "hostsvc-switchboard-builder",
	"image": "mcr.microsoft.com/devcontainers/base:dev-ubuntu",
	"workspaceFolder": "/workspaces/hostsvc-switchboard-builder",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/hostsvc-switchboard-builder,type=bind,consistency=cached",
	"runArgs": [
		"--name",
		"hostsvc-switchboard-builder"
	],
	"hostRequirements": {
		"cpus": 4,
		"memory": "4gb"
	},
	"features": {
		"ghcr.io/microsoft/azure-orbital-space-sdk/spacefx-dev:0.11.0": {
			"app_name": "hostsvc-switchboard-builder",
			"app_type": "none",
            "cluster_enabled": "false"
		}
	},
	"remoteUser": "root"
}

